<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="baleLoader">
	<annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>
    <name>
        <en>Automatic Bale Loader</en>
    </name>
	<typeDesc>$l10n_TypeDesc_BaleLoader</typeDesc>
    <filename>models/baleLoader.i3d</filename>

    <size width="4.5" length="15" lengthOffset="-1.0" />

    <wheels autoRotateBackSpeed="2.0">
        <wheel driveMode="0" repr="0" radius="0.617" deltaY="0.08" suspTravel="0.15" spring="5" damper="25" mass="0.3" lateralStiffness="8" />
        <wheel driveMode="0" repr="1" radius="0.617" deltaY="0.08" suspTravel="0.15" spring="5" damper="25" mass="0.3" lateralStiffness="8" />
        <wheel driveMode="0" repr="2" radius="0.617" deltaY="0.08" suspTravel="0.15" spring="5" damper="25" mass="0.3" steeringAxleScale="-0.7" steeringAxleRotMax="20" steeringAxleRotMin="-20" lateralStiffness="8" />
        <wheel driveMode="0" repr="3" radius="0.617" deltaY="0.08" suspTravel="0.15" spring="5" damper="25" mass="0.3" steeringAxleScale="-0.7" steeringAxleRotMax="20" steeringAxleRotMin="-20" lateralStiffness="8" />
    </wheels>
    <brakeForce>1</brakeForce>
    <capacity>24</capacity>

    <steeringAxleAngleScale startSpeed="10" endSpeed="70" />

    <lights count="0">
    </lights>

    <movingTools>
        <!-- front platform -->
        <movingTool index="0>7">
            <!-- move the front platform cylinder -->
            <dependentPart index="0>8" />
        </movingTool>

        <!-- main platform -->
        <movingTool index="0>5">
            <!-- move the main platform cylinder -->
            <dependentPart index="0>6" />
        </movingTool>

        <!-- support -->
        <movingTool index="0>11" componentJointIndex="0" anchorActor="0">
        </movingTool>
    </movingTools>

    <movingParts>
        <!-- front platform cylinder -->
        <movingPart index="0>8" referencePoint="0>7|1" referenceFrame="0>7">
            <translatingPart index="0>8|0" />
        </movingPart>

        <!-- main platform cylinder -->
        <movingPart index="0>6" referencePoint="0>5|4" referenceFrame="0>">
            <translatingPart index="0>6|0" />
        </movingPart>
    </movingParts>

    <animations>
        <!-- move from transform to work position -->
        <animation name="baleGrabberTransportToWork">
            <part node="9|0" startTime="0" duration="0.6" startRot="0 0 0" endRot="35 0 0"/>
            <part node="9" startTime="0" duration="2.5" startRot="0 0 -90" endRot="0 0 0"/>
        </animation>
        <!-- move from work to drop position -->
        <animation name="baleGrabberWorkToDrop">
            <part node="9|0" startTime="0" duration="0.6" startRot="35 0 0" endRot="0 -90 0"/>
        </animation>
        <!-- drop bale from grabber to platform -->
        <animation name="baleGrabberDropBale">
            <part node="9|0|0|0" startTime="0" duration="1" startTrans="i3dValue" endTrans="-3.53381 0.71659 -0.14449" />
        </animation>

        <!-- move bales to other side/row -->
        <animation name="bale1ToOtherSide">
            <part node="7|0|0" startTime="0.26" endTime="1" startTrans="0 0 0" endTrans="0 0 1.85415" />
        </animation>
        <animation name="bale3ToOtherSide">
            <part node="7|0|2" startTime="0.26" endTime="1" startTrans="0 0 0" endTrans="0 0 1.85415" />
        </animation>

        <animation name="frontBalePusher">
            <part node="10" startTime="0" duration="0.77" startTrans="0 1.12512 3.3" endTrans="0 1.12512 1.70811" />
        </animation>
        <animation name="balesToOtherRow">
            <part node="7|0|0" startTime="0.2" endTime="0.77" startTrans="0 0 1.85415" endTrans="1.13516 0 1.85415" />
            <part node="7|0|1" startTime="0.2" endTime="0.77" startTrans="0 0 0" endTrans="1.13516 0 0" />
        </animation>

        <animation name="rotatePlatform">
            <part node="7" startTime="0" duration="2" startRot="0 0 0" endRot="-90 0 0" />
        </animation>
        <!-- make sure the bales lie on the floor when rotation is finished (because of the gravity) -->
        <animation name="rotatePlatformMoveBales1"> <!-- if there is 1 bale -->
            <part node="7|0|0" startTime="0.5" endTime="2" startTrans="1.13516 0 1.85415" endTrans="1.821 0 0" />
        </animation>
        <animation name="rotatePlatformMoveBales2"> <!-- if there are 2 bales -->
            <part node="7|0|0" startTime="0.5" endTime="2" startTrans="1.13516 0 1.85415" endTrans="1.821 0 1.85415" />
            <part node="7|0|1" startTime="0.5" endTime="2" startTrans="1.13516 0 0" endTrans="1.821 0 0" />
        </animation>
        <animation name="rotatePlatformMoveBales3"> <!-- if there are 3 bales -->
            <part node="7|0|0" startTime="0.5" endTime="2" startTrans="1.13516 0 1.85415" endTrans="1.821 0 1.85415" />
            <part node="7|0|1" startTime="0.5" endTime="2" startTrans="1.13516 0 0" endTrans="1.821 0 0" />
            <part node="7|0|2" startTime="0.5" endTime="2" startTrans="0 0 1.85415" endTrans="0.68584 0 0" />
        </animation>
        <animation name="rotatePlatformMoveBales4"> <!-- if there are 4 bales -->
            <part node="7|0|0" startTime="0.5" endTime="2" startTrans="1.13516 0 1.85415" endTrans="1.821 0 1.85415" />
            <part node="7|0|1" startTime="0.5" endTime="2" startTrans="1.13516 0 0" endTrans="1.821 0 0" />
            <part node="7|0|2" startTime="0.5" endTime="2" startTrans="0 0 1.85415" endTrans="0.68584 0 1.85415" />
            <part node="7|0|3" startTime="0.5" endTime="2" startTrans="0 0 0" endTrans="0.68584 0 0" />
        </animation>

        <animation name="moveBalePlaces">
            <part node="5|3" startTime="0" duration="10" endTrans="-0.91 2.76527 -0.11664" />
            <part node="5|2" startTime="0" duration="10" endTrans="0 0.27068 -0.56544" /> <!-- big bale pusher/holder -->
        </animation>
        <animation name="moveBalePlacesToEmpty">
            <part node="5|3" startTime="0" duration="12" endTrans="-0.91 2.76527 -0.60132" />
        </animation>
        <animation name="moveBalePusherToEmpty">
            <part node="5|2" startTime="0" duration="12" endTrans="0 0.27068 -1.05012" />
        </animation>

        <animation name="emptyRotate">
            <part node="5" startTime="0" duration="5" endRot="-90 0 0" />
        </animation>


        <animation name="emptyHidePusher1">
            <part node="5|2|0" startTime="0" duration="1.5" endRot="-90 0 0" />
        </animation>

        <animation name="closeGrippers">
            <part node="5|0" startTime="0" duration="0.6" endTrans="1.87 -0.09982 -0.2921" endRot="0 0 2" />
            <part node="5|1" startTime="0" duration="0.6" endTrans="-1.87 -0.09982 -0.2921" endRot="0 0 -2" />
        </animation>

        <!-- move support wheel down/up -->
        <animation name="moveSupport">
            <part node="11" startTime="0" duration="0.6" startTrans="0 0.673 3.645" endTrans="0 0.381 3.645" />
        </animation>
    </animations>

    <baleGrabber grabNode="9|0|0|0"/>
    <balePlaces startBalePlace="7|0" >
        <balePlace node="5|3|0" />
        <balePlace node="5|3|1" />
        <balePlace node="5|3|2" />
        <balePlace node="5|3|3" />
        <balePlace node="5|3|4" />
        <balePlace node="5|3|5" />
    </balePlaces>

	<baleTypes>
        <baleType filename="$data/maps/models/objects/strawbalehaybaleBaler.i3d" />
        <baleType filename="$data/maps/models/objects/strawbalestrawbaleBaler.i3d" />
	</baleTypes>

    <support animationName="moveSupport" />

	<allowFillFromAir value="false" />
    <allowTipDischarge value="false" />

    <attacherJoint index="4" jointType="trailer"/>

	<baleGrabSound file="$data/vehicles/trailers/baler.wav" pitchOffset="1" volume="1"/>
	<baleLoaderHydraulicSound file="$data/vehicles/steerable/deutz/hydraulicUp.wav" pitchOffset="2.0" volume="0.5"/>
	<baleGrabParticleSystem disableDuration="0.6" position="-2 0.6 4.7" rotation="0 0 0" file="$data/vehicles/particleSystems/threshingStrawParticleSystemSmall.i3d" />

    <components count="2">
        <component1 centerOfMass="0 0 -0.5" solverIterationCount="8" />
        <component2 solverIterationCount="8" />
        <joint component1="0" component2="1" index="0>11|0" rotLimit="0 0 0" transLimit="0 0 0" />
	</components>
	
	<schemaOverlay file="$data/vehicles/schemas/implementSchema.png" fileSelected="$data/vehicles/schemas/implementSchemaSelected.png" width="0.5" height="0.5" attacherJointPosition="0 0"/>
	
</vehicle>
